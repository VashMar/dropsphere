doctype html
html
    head
        title= "DropSphere"
        script(src='//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js')
        script(src='/chat.js')
        script(src='/socket.io/socket.io.js')
        script(src='/jquery.slimscroll.min.js')
        script(src='/main.js')
        link(rel='stylesheet', href='/bootstrap.min.css') 
        link(rel='stylesheet', href='/style.css') 

    body
        #container
            h1 DropSphere
            #chat(style='display:none;')
                #content(class="form-control")
                .controls
                    input#messageInput(class="form-control")
                    input#send(type='button',class="form-control" value='send')
            #name
              p Name:
              input#username(class="form-control")
              input#setName(type='button', value='join', class="form-control")