                                    &nbsp;
                                else
                                    if sphereMap[sphereID].type == "Personal"
                                        span(id ="okcircle-" + i class="glyphicon glyphicon-user") 
                                    else
                                        span(id ="okcircle-" + i class="glyphicon glyphicon-globe") 
                                    &nbsp;
                                span.sphereName
                                    =sphereName
                li#sphereDivider.divider(role="presentation" )
