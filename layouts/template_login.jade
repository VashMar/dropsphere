        include includes/head

    body
        include includes/login
    
        #resetPassword.modal.fade(tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true")
          .modal-dialog
            .modal-content
              .modal-header
                button.close(type="button" data-dismiss="modal" aria-hidden="true") &times;
                h4.modal-title Reset your password
              
              .modal-body
                  input#resetEmail(class="form-control" placeholder="Enter your email")

              .modal-footer
                  button#resetPass.btn.btn-primary(type="button" onclick="resetPass();") Submit