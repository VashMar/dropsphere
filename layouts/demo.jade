doctype html
html
    head
        title= "DropSphere"
        script(src='//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js')
        script(src='/bootstrap.min.js')           
        script(src='/socket.io/socket.io.js')
        script(src='/jquery.slimscroll.min.js')
        script(src='/main.js')
        include includes/head

    body
        #container
            #chat(style='display:none;')
                .dropdown
                    a#settings(data-toggle="dropdown" href="#")
                    ul.dropdown-menu(role="menu" aria-labelledby="dLabel")
                        li(role="presentation")
                            a(role="menuitem" tabindex="-1" data-toggle="modal" data-target="#myModal" href="#") Change name 
                        li(role="presentation")
                            a(role="menuitem" tabindex="-1" href="#") Set Nickname 
                        li(role="presentation" class="divider")
                        li(role="presentation")
                            a(role="menuitem" tabindex="-1" href="#") Logout 
                img#chatLogo(src="dropsphere_sm.png")
                #users
                #content(class="form-control")
                .controls
                    textarea#messageInput(class="form-control" placeholder="Enter a message...")
                    input#send(type='button' class="btn btn-primary" value='send')
            #name
              img(src="dropsphere_sm.png")
              p Name
              input#username(class="form-control")
              input#setName(type='button' value='join' class="btn btn-primary")

        #myModal.modal.fade(tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true")
         .modal-dialog
            .modal-content
              .modal-header
                button.close(type="button" data-dismiss="modal" aria-hidden="true") &times;
                h4.modal-title Modal title
              
              .modal-body
                p one fine body&hellip;
              
              .modal-footer
                button.btn.btn-default(type="button" data-dismiss="modal") Close
                button.btn.btn-primary(type="button") Save changes

    script(src='/demo_bindings.js')           
    script(src='/chat_bindings.js')
    script(src='/login.js')  